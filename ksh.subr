#!/bin/ksh

got-push() {
	local r=$(got info | perl -ne 'print if s/^repository: //')
	[ -z "$r" ] && return 1
	(cd "$r" && git push "$@")
}

hexrev() {
	perl -ne 'print reverse(/../g), "\n"'
}

hexenc() {
	perl -e 'while (read STDIN, $_, 1) { printf "%02x", ord }; print "\n"'
}

randport() {
	jot -r 1 49152 65535
}
